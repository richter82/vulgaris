SRC = ../test/src/blz_test_peer_both.cpp
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/test/blzpeer_sta
INCLUDES = 	-I../public/cpp\
			-I../src\
			-I../src/crlib\
			-I../test/sample_blz_model
			
CCFLAGS = -std=c++11 -Wall -fPIC -DSTA_L $(CC_DBG_REL_OPT)
CCC = g++
LDLIBS= -L../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib -L../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/contrib/lib -lblz_model_sample -lblzdrisqlite -lsqlite -lblzcppinterf -lblzpeer -lblzmodel -lblzpers -lcr -lpthread $(LD_ARCH_LIB)

default: blzstatpeer

all: clean blzstatpeer

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

blzstatpeer: $(OBJ)
	$(CCC) $(LD_DBG_REL_OPT) -o $(OUTDIR)/blzstatpeer $(OBJ) $(LDLIBS)

clean:
	rm -f $(OBJ) $(OUTDIR)/blzstatpeer
