SRC =	../src/blzpeerlib/blz_peer_int.cpp\
		../src/blzpeerlib/blz_acceptor_int.cpp\
		../src/blzpeerlib/blz_selector.cpp\
		../src/blzpeerlib/blz_connection_proto.cpp\
		../src/blzpeerlib/blz_connection_int.cpp\
		../src/blzpeerlib/blz_peer_automa.cpp\
		../src/blzpeerlib/blz_transaction_int.cpp\
		../src/blzpeerlib/blz_subscription_int.cpp\
		../src/blzpeerlib/blz_peer_pers_sbs.cpp\
		../src/blzpeerlib/blz_restore.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public/cpp\
			-I../src\
			-I../src/crlib
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libblzpeer
	
all: clean libblzpeer

libblzpeer:	$(OBJ)
	ar rcs $(OUTDIR)/libblzpeer.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libblzpeer.a
	