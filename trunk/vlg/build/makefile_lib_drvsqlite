SRC =	../src/blzdrisqlitelib/blz_drv_sqlite.cpp
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public/cpp\
			-I../src\
			-I../src/crlib\
			-I../contrib/sqlite
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libblzdrisqlite
	
all: clean libblzdrisqlite
	
libblzdrisqlite:	$(OBJ)
	ar rcs $(OUTDIR)/libblzdrisqlite.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libblzdrisqlite.a