SRC = 	../src/apicpp/vlg_connection.cpp\
		../src/apicpp/vlg_peer.cpp\
		../src/apicpp/vlg_persistence.cpp\
		../src/apicpp/vlg_subscription.cpp\
		../src/apicpp/vlg_transaction.cpp\
		../src/apicpp/vlg_model.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public\
			-I../public/cpp\
			-I../src\
			-I../src/cr

CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libapicpp
	
all: clean libapicpp
	
libapicpp:	$(OBJ)
	ar rcs $(OUTDIR)/libapicpp.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libapicpp.a
	