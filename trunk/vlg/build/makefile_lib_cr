SRC =	../src/crlib/cr_cfg.cpp\
		../src/crlib/cr_dl.cpp\
		../src/crlib/cr_logger.cpp\
		../src/crlib/cr_concurrent.cpp\
		../src/crlib/cr_obj_coll.cpp\
		../src/crlib/cr_structs.cpp\
		../src/crlib/cr_structs_mt.cpp\
		../src/crlib/cr_core.cpp\
		../src/crlib/cr_strings.cpp\
		../src/crlib/cr_parse.cpp\
		../src/crlib/cr_structs_rep.cpp\
		../src/crlib/cr_bbuf.cpp\
		../src/crlib/cr_time.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public/cpp\
			-I../src\
			-I../src/crlib
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libcr
	
all: clean libcr
	
libcr: 	$(OBJ)
	ar rcs $(OUTDIR)/libcr.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libcr.a
