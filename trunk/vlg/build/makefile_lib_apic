SRC = 	../src/apic/vlg_c_connection.cpp\
		../src/apic/vlg_c_model.cpp\
		../src/apic/vlg_c_peer.cpp\
		../src/apic/vlg_c_persistence.cpp\
		../src/apic/vlg_c_subscription.cpp\
		../src/apic/vlg_c_transaction.cpp\
		../src/apic/vlg_c_drv_sqlite.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public\
			-I../public/cpp\
			-I../public/c\
			-I../src\
			-I../src/cr
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) $(EXTRACCFLAGS) -c $< -o $@

default: libapic
	
all: clean libapic
	
libapic:	$(OBJ)
	ar rcs $(OUTDIR)/libapic.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libapic.a
	