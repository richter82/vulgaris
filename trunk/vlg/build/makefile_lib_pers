SRC =	../src/blzperslib/blz_persistence_int.cpp\
		../src/blzperslib/blz_pers_mng.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public/cpp\
			-I../src\
			-I../src/crlib
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libblzpers
	
all: clean libblzpers
	
libblzpers:	$(OBJ)
	ar rcs $(OUTDIR)/libblzpers.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libblzpers.a
	