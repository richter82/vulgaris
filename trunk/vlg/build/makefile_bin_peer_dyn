SRC = ../test/src/vlg_test_peer_both.cpp
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/bin
INCLUDES = 	-I../public\
			-I../public/cpp\
			-I../public/storage\
			-I../src\
			-I../test/sample_vlg_model
			
CCFLAGS = -std=c++14 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++
LDLIBS= -L../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/libso -lsmplmdl -ldrvsqlite -L../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib -lapicpp -lvlg -lpthread $(LD_ARCH_LIB)

default: peer_dyn

all: clean peer_dyn

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

peer_dyn: $(OBJ)
	$(CCC) $(LD_DBG_REL_OPT) -o $(OUTDIR)/peer_dyn $(OBJ) $(LDLIBS)

clean:
	rm -f $(OBJ) $(OUTDIR)/peer_dyn
