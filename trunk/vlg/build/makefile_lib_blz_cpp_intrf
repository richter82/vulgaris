SRC = 	../src/blz_cpp_public_impl/blaze_connection.cpp\
		../src/blz_cpp_public_impl/blaze_peer.cpp\
		../src/blz_cpp_public_impl/blaze_persistence.cpp\
		../src/blz_cpp_public_impl/blaze_subscription.cpp\
		../src/blz_cpp_public_impl/blaze_transaction.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public/cpp\
			-I../src\
			-I../src/crlib

CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libblzcppinterf
	
all: clean libblzcppinterf
	
libblzcppinterf:	$(OBJ)
	ar rcs $(OUTDIR)/libblzcppinterf.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libblzcppinterf.a
	