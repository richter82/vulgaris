SRC = ../test/sample_blz_model/blz_model_sample.cpp
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public/cpp\
			-I../src\
			-I../src/crlib
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libblz_model_sample
	
all: clean libblz_model_sample
	
libblz_model_sample:	$(OBJ)
	ar rcs $(OUTDIR)/libblz_model_sample.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libblz_model_sample.a