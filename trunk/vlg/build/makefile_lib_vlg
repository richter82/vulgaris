SRC =	../src/vlg/acceptor.cpp\
		../src/vlg/bbuf.cpp\
		../src/vlg/cfg.cpp\
		../src/vlg/concurr.cpp\
		../src/vlg/conn_impl.cpp\
		../src/vlg/dl.cpp\
		../src/vlg/logger.cpp\
		../src/vlg/model.cpp\
		../src/vlg/parse.cpp\
		../src/vlg/proto.cpp\
		../src/vlg/prs_impl.cpp\
		../src/vlg/prs_mng.cpp\
		../src/vlg/prs_sbs.cpp\
		../src/vlg/pr_aut.cpp\
		../src/vlg/pr_impl.cpp\
		../src/vlg/restore.cpp\
		../src/vlg/sbs_impl.cpp\
		../src/vlg/selector.cpp\
		../src/vlg/structs.cpp\
		../src/vlg/timing.cpp\
		../src/vlg/tx_impl.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public\
			-I../public/cpp\
			-I../src
			
CCFLAGS = -std=c++14 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libvlg
	
all: clean libvlg

libvlg:	$(OBJ)
	ar rcs $(OUTDIR)/libvlg.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libvlg.a
	