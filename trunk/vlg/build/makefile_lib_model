SRC =	../src/blzmodellib/blz_model.cpp\
		../src/blzmodellib/blz_model_utl.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public/cpp\
			-I../src\
			-I../src/crlib
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

default: libblzmodel
	
all: clean libblzmodel
	
libblzmodel:	$(OBJ)
	ar rcs $(OUTDIR)/libblzmodel.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libblzmodel.a
	