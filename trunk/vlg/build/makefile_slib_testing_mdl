SRC = ../test/sample_vlg_model/vlg_model_sample.cpp
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/libso
INCLUDES = 	-I../public\
			-I../public/cpp\
			-I../src\
			-I../src/cr
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++
LDFLAGS = -shared
LDFLAGS_1 = -Wl,-no-whole-archive,-error-unresolved-symbols
LDLIBS= -L../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib -lvlg -lcr -lpthread $(LD_ARCH_LIB)
LDFLAGS_2 = -Wl,-no-whole-archive

default: libsmplmdl

all: clean libsmplmdl

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

libsmplmdl: 	$(OBJ)
	$(CCC) $(LD_DBG_REL_OPT) $(LDFLAGS) -o $(OUTDIR)/libsmplmdl.so $(OBJ) $(LDFLAGS_1) $(LDLIBS) $(LDFLAGS_2)

clean:
	rm -f $(OBJ) $(OUTDIR)/libsmplmdl.so
