SRC = 	../src/blz_c_public_impl/blaze_c_connection.cpp\
		../src/blz_c_public_impl/blaze_c_model.cpp\
		../src/blz_c_public_impl/blaze_c_peer.cpp\
		../src/blz_c_public_impl/blaze_c_persistence.cpp\
		../src/blz_c_public_impl/blaze_c_subscription.cpp\
		../src/blz_c_public_impl/blaze_c_transaction.cpp\
		../src/blz_c_public_impl/blaze_c_pers_driv_sqlite.cpp
		
OBJ = $(SRC:.cpp=.o)
OUTDIR = ../bin/$(OUT_ARCH_DIR)/$(OUT_TRGT_DIR)/lib
INCLUDES = 	-I../public/cpp\
			-I../public/c\
			-I../src\
			-I../src/crlib
			
CCFLAGS = -std=c++11 -Wall -fPIC $(CC_DBG_REL_OPT)
CCC = g++

.cpp.o:
	$(CCC) $(INCLUDES) $(CCFLAGS) $(EXTRACCFLAGS) -c $< -o $@

default: libblzcinterf
	
all: clean libblzcinterf
	
libblzcinterf:	$(OBJ)
	ar rcs $(OUTDIR)/libblzcinterf.a $(OBJ)

clean:
	rm -f $(OBJ) $(OUTDIR)/libblzcinterf.a
	